@model TwoTables

<div class="row">
    <div class="col-6">
        <h2>Product Details</h2>
        <table class="table table-hover">
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Unit Price</th>
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-6">
        <h2>Order Details</h2>
        <table class="table table-hover">
            <tr>
                <th>Order Id</th>
                <th>Order Date</th>
            </tr>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.OrderDate</td>
                </tr>
            }
        </table>
    </div>
</div>


