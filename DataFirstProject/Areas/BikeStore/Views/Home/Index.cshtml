@model IEnumerable<DataFirstProject.Areas.BikeStore.Models.Product>

@{
    Layout = "~/Views/Shared/_layout.cshtml";
}


<form>
    <div class="col-md-8 row">
        <label class="col-form-label col-md-3">Enter the Year</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="year" />
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
</form>
<div class="row">
    <div class="col-md-8">
        <table class="table table-hover">
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Model Year</th>
                <th>List Price</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.ModelYear</td>
                    <td>@item.ListPrice</td>
                </tr>
            }
        </table>
    </div>
</div>